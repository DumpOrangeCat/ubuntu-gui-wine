# File .devcontainer/devcontainer.json
{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "docker-in-docker": "latest"
  },
  "forwardPorts": [6901],
  "postCreateCommand": "sudo apt update && sudo apt install -y docker.io && docker run -d --shm-size=512m -p 6901:6901 -e VNC_PW=123456 kasmweb/ubuntu-jammy-desktop"
}{
  "name": "Wine GUI Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [6080, 5901],
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined",
    "--shm-size=1gb"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.remote-containers",
        "ms-vscode.cpptools"
      ]
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "winetricks corefonts && echo 'âœ” Ready!'"
}
